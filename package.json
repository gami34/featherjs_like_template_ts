{
  "name": "gideon",
  "version": "0.1.0",
  "description": "feather like nodejs ts template with linting",
  "main": "./dist/app.js",
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "start": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --cache --fix  \"./src/**/*.+(js|ts|yml|yaml|json)\"",
    "format": "prettier --write \"./src/**/*.(js|ts|yml|yaml|json)\"",
    "prepare": "husky install"
  },
  "keywords": [
    "gideon",
    "featherjs",
    "like",
    "template",
    "for",
    "backend",
    "development"
  ],
  "author": "gideon ifeanyi mmeremnwanne",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "express": "^4.17.2"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,scss,json,html}": [
      "npm run format",
      "npm run lint"
    ]
  }
}
