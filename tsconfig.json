{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": ".",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "lib": ["es2015"],
  "exclude": ["node_modules", "dist", "coverage"],
  "include": ["src/*"]
}
